<%= form_for [gallery, image] do |form| %>
  <%= render "application/form_errors", object: image %>

  <div>
    <%= form.label :name, "Image name: " %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description, "Image description: " %>
    <%= form.text_area :description %>
  </div>
 
  <div>
    <%= form.submit "Add Image" %>
  </div>

<% end %>